<container>
    <row>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{form_title}}</h3><br>
            </div>
            <div class="card-body">
                <ul class="login-form">
                   
                        {{#each posts}}
                         <li>
                            <article class="blog-post">
                                <container>
                                    <row>
                                        <div class="card">
                                            <div class="card-header">
                                                <div class="title"><h2>{{title}}</h2>
                                                    by {{user.username}} on {{format_date createdAt}}
                                                </div>
                                                <div class="card-body">
                                                    <div class="meta">
                                                        {{content_txt}} 
                                                        {{comments.length}} {{format_plural "comment" comments.length}}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </row>
                                </container>
                            </article>
                        </li>    
                    {{/each}} 
                    
                    <li>
                        <div class="button">
                            <button class="post-btn"> + New Post</button><br><br>
                            <a class="nav-link login" href="/create-post">Create Post</a>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <button class="post-btn"> + Edit Post</button><br><br>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </row>
</container>